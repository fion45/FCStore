@model FCStore.Models.Product
@section css{
    @Styles.Render("~/xheditor/css")
}

@section scripts{
    @Scripts.Render("~/bundles/HighChart")
    @Scripts.Render("~/bundles/productDetail")
    @Scripts.Render("~/xheditor/js")
    
    <script type="text/javascript" >
        $(function () {
            var editer = $("<textarea></textarea>");
            var tmpStr = $("#productTitle").html();
            tmpStr = $.trim(tmpStr);
            $("#productTitle").html("");
            editer.appendTo($("#productTitle"));
            editer.val(tmpStr);

            editer = $("<textarea></textarea>");
            tmpStr = $("#descriptContent").html();
            $("#descriptContent").html("");
            editer.appendTo($("#descriptContent"));
            editer.val(tmpStr);

            editer.xheditor({
                upLinkUrl: "/upload.aspx",
                upLinkExt: "zip,rar,txt",
                upImgUrl: "/upload.aspx",
                upImgExt: "jpg,jpeg,gif,png",
                upFlashUrl: "/upload.aspx",
                upFlashExt: "swf",
                upMediaUrl: "/upload.aspx",
                upMediaExt: "avi"
            });

            $("#productBrand .brandA").bind("click", ProductDetail.onBrandItemClick);

            $("#gobackBtn").bind("click", ProductDetail.onBackBtnClick);
            $("#refreshBtn").bind("click", ProductDetail.onRefreshBtnClick);
            $("#saveBtn").bind("click", ProductDetail.onSaveBtnClick);
            $("#previewBtn").bind("click", ProductDetail.onPreviewBtnClick);
        });
    </script>
}

<div id="PD_View">
    <div id="categoryNav">
        <div>当前位置：</div>
        @{
            FCStore.Models.Category tmpCate = Model.Category;
            int CID = -1;
            string htmlStr = "";
            while (CID != tmpCate.CID)
            {
                htmlStr = "<div><a href=\"/Product/ListByCategory/" + tmpCate.CID + "\">" + tmpCate.NameStr + "</a></div><div>></div>" + htmlStr;
                CID = tmpCate.CID;
                tmpCate = tmpCate.Parent;
            }
            IHtmlString html = new HtmlString(htmlStr);
            @html
        }
        <div>商品详情</div>
    </div>
    <div class="top">
        <div id="preview">
            <div class="jqzoom" id="spec-n1">
                @if (Model.ImgPathArr.Length > 0)
                {
                    <img id="productImage" src="@(Model.ImgPathArr[0])" jqimg="@(Model.ImgPathArr[0])" />
                }
            </div>
            <div id="spec-n5" class="picNav">
                <div class="control" id="spec-left"></div>
                <div class="content" id="spec-list">
                    <div>
                        <ul class="ILUl">
                            @{
                                foreach (string tmpSrc in Model.ImgPathArr)
                                {
                                    <li>
                                        <img src="@(tmpSrc)" jqimg="@(tmpSrc)" />
                                    </li>
                                }
                            }
                        </ul>
                    </div>
                </div>
                <div class="control" id="spec-right"></div>
            </div>
        </div>
        <div id="productInfo">
            <div id="productTitle">
                @(Model.Title)
            </div>
            <div id="productBrand">
                <div>
                    <div class="title">
                        编号：
                    </div>
                    <div class="content" id="PIDLB">@(Model.PID)</div>
                </div>
                <div class="evaluate">
                    @for (int i = 0; i < 5; i++)
                    {
                        <div class="star empty"></div>
                    }
                </div>
                <div class="brandDiv">
                    <div class="title">
                        品牌：
                    </div>
                    <div class="content">
                        <a class="brandA" href="~/Manager/BrandsManager/1/@(Model.PID)">
                            <div class="icon">
                                @*<img src="/Brand/@(Model.Brand.Tag).jpg" alt="@(Model.Brand.Name2)" />*@
                                @(Model.Brand.NameStr)
                            </div>
                        </a>
                    </div>
                </div>
                <div class="pullupDiv"></div>
            </div>
            <div id="productPrice">
                <div class="title">代购价：</div>
                <div class="content price">￥@(Model.Price)</div>
                <div class="title">市场价：</div>
                <div class="content marketPrice">￥@(Model.MarketPrice)</div>
                <div class="title">已售出：</div>
                <div class="content">@(Model.Sale)</div>
                <div class="pullupDiv"></div>
                <div class="conner"></div>
            </div>
            @*<div id="productSaleType">
                    <div class="title">
                        支付方式：
                    </div>
                    <div class="content">
                        <span>支持支付宝</span>
                    </div>
                </div>
                <div id="productSend">
                    <div class="title">
                        配送方式：
                    </div>
                    <div class="content">
                        <span>支持美国直邮</span>
                        <span>支持国内转邮</span>
                    </div>
                </div>*@
            <div id="productChoose">
                @{
                    if (!string.IsNullOrEmpty(Model.Chose))
                    {
                        try
                        {
                            Newtonsoft.Json.Linq.JArray jArr = Newtonsoft.Json.Linq.JArray.Parse(Server.HtmlDecode(Model.Chose));
                            foreach (Newtonsoft.Json.Linq.JObject item in jArr)
                            {
                                <div class="choseItemPar">
                                    <div class="title"> @(item["title"])：</div>
                                    <div class="content">
                                        @{
                                bool tag = true;
                                foreach (Newtonsoft.Json.Linq.JObject vItem in (Newtonsoft.Json.Linq.JArray)item["values"])
                                {
                                    <span class="choseItem cValue @(tag ? "sel" : "" )">@(vItem["name"])</span>
                                    tag = false;
                                }
                                        }
                                        <div class="pullupDiv"></div>
                                    </div>
                                </div>
                            }
                        }
                        catch
                        { }
                    }
                }
            </div>
            @*<div id="productSaleInput">
                <div class="title">
                    购买数量：
                </div>
                <div class="content">
                    <div class="spinnerLeft"></div>
                    <input id="buyCount" class="spinner" value="1" type="text" />
                    <div class="spinnerRight"></div>
                    <div class="pullupDiv"></div>
                </div>
            </div>
            <div id="productBtn" class="p1">
                <div class="p2">
                    <div class="@(ViewBag.KeepTag ? "lbtngray" : "lbtn1")" id="keepBtn" onclick="@(ViewBag.KeepTag ? "" : "ProductDetail.onKeepBtnClick()")">@(ViewBag.KeepTag ? "已" : "")收藏</div>
                </div>
                <div class="p2">
                    <div class="lbtn2" id="buyBtn" onclick="ProductDetail.onBuyBtnClick()">加入购物车</div>
                </div>
            </div>*@
            <div class="pullupDiv"></div>
        </div>
        <div class="pullupDiv"></div>
    </div>
    <div id="productTabs">
        <ul>
            <li><a href="#descriptContent">商品详情</a></li>
            <li><a href="#evaluation">客户评价(@(ViewBag.EvaluationCount))</a></li>
            <li><a href="#saleLog">销售记录(@(ViewBag.SaleCount))</a></li>
        </ul>
        <div id="descriptContent">
            @{
                html = new HtmlString(Model.Descript);
                @html
            }
        </div>
        <div id="evaluation">

        </div>
        <div id="saleLog">
            <div id="chartDiv"></div>
        </div>
        <div id="btnDiv" class="p1 pullupDiv">
            <ul>
                <li class="p4">
                    <input id="gobackBtn" class="sbtn1" type="button" value="返回" />
                </li>
                <li class="p4">
                    <input id="refreshBtn" class="sbtn2" type="button" value="刷新" />
                </li>
                <li class="p4">
                    <input id="saveBtn" class="sbtn3" type="button" value="保存" />
                </li>
                <li class="p4">
                    <input id="previewBtn" class="sbtn1" type="button" value="预览" />
                </li>
            </ul>
        </div>
    </div>
</div>
