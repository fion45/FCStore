                    <li class="item myCart">
                        <a href="/Order/Cart">我的购物车</a>
                    </li>
                </ul>
            </div>
        </div>
        <div id="searchDiv">
            <div class="centerDiv">
                <ul>
                    <li>
                        <input id="searchTB" type="text" />
                    </li>
