    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/themes/base/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        <div id="toolbar">
            <div class="centerDiv" >
                <div class="help">
                    <a>设为首页</a>|
                    <a>收藏我们</a>|
                    <a>帮助中心</a>
                </div>
                <div class="userInfo">
                    <a href="/Home/Login">登陆商城</a>|
                    <a href="/Home/Register">免费注册</a>
                </div>
            </div>
        </div>
        <div id="iconDiv">
            <div class="centerDiv">
                
            </div>
        </div>
        <div id="navigatorDiv">
            <div class="centerDiv">
                <ul id="navigator">
                    <li class="item sel">
                        <a href="/Home/Index">首页</a>
