    @{Html.RenderAction("_CategoryList", "Category");}
    <div id="Main">
        <div id="Center">
            @RenderBody()
            <div class="pullupDiv"></div>
        </div>
    </div>
    <div id="TopBtn" onclick="MainLayout.onTopBtnClick(this);">
        <div class="title">回顶部</div>
    </div>
    <footer>
        <div class="centerDiv">
            <ul>
                <li>
                    <div class="newerGuide">新手指南</div>
