@model FCStore.Models.OrderPacket

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>OrderPacket</legend>

        @Html.HiddenFor(model => model.PacketID)

        <div class="editor-label">
            @Html.LabelFor(model => model.PID, "Product")
        </div>
        <div class="editor-field">
            @Html.DropDownList("PID", String.Empty)
            @Html.ValidationMessageFor(model => model.PID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Count)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Count)
            @Html.ValidationMessageFor(model => model.Count)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Discount)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Discount)
            @Html.ValidationMessageFor(model => model.Discount)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Univalence)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Univalence)
            @Html.ValidationMessageFor(model => model.Univalence)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
